<div class="small-6 small-offset-3 columns">

  <div class="callout primary">
    <h3>My Location</h3>
    <p>
      <%= @geolocation.city %>,
      <%= @geolocation.state %>,
      <%= @geolocation.country %>
    </p>
  </div>

  <div class="callout primary">
    <h3>My IP Address</h3>
    <p><%= @ip %></p>
  </div>

  <div class="callout primary">
    <h3>Current Time</h3>
    <p><%= @time %></p>
  </div>
</div>
